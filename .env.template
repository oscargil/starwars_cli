# Example .env file for Star Wars App
# Copy to .env and adjust values as needed for your environment

# --- CLI configuration ---
# Base URL for the backend API (used by CLI)
# Default for Docker CLI in docker-compose.yml: http://backend:8000
# You need to change this if you are not using docker for backend
API_BASE_URL=http://localhost:6969

# Timeout (in seconds) for CLI HTTP requests
REQUEST_TIMEOUT=10

# Number of items per page for CLI pagination
PAGE_SIZE=10

# --- Backend configuration ---
# Base URL for the Star Wars API proxy (used by backend)
SWAPI_BASE_URL=https://swapi.dev/api

# Number of items per page for backend pagination
PAGE_SIZE=10

# Number of unique SWAPI queries to cache in memory
CACHE_SIZE=64

# Logging level for backend logs (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Backend port (used when running uvicorn)
PORT=8000
